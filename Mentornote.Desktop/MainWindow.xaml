<Window x:Class="Mentornote.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mentornote.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" MinHeight="500" MinWidth="650">
    <Grid>
        <!-- Define two columns: a fixed-width sidebar and a flexible main area -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar fixed width -->
            <ColumnDefinition Width="*"/>
            <!-- Main content takes remaining space -->
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="#FF242424"
                Padding="20">

            <!-- StackPanel stacks children vertically (top to bottom) -->
            <StackPanel VerticalAlignment="Stretch">
                
               <!-- Logo / App name at the top -->
                <TextBlock Text="MentorNote"   
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,24"/>   <!-- Space below the logo -->

                <!-- Section label -->
                <TextBlock Text="Navigation"
                           Foreground="#FFBFBFBF"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <Button x:Name="MeetingButton"
                        Content="MeetingsButton" 
                        Margin="0,0,0,10"   
                        Height="36"
                        Background="#FF3A3A3A"
                        Foreground="White"
                        BorderBrush="#FF4A4A4A"
                        Click="MeetingsButton_Click" />

                <Button x:Name="StudyButton"
                        Content="Study"
                        Margin="0,0,0,8"
                        Height="36"
                        Background="#FF3A3A3A"
                        Foreground="White"
                        BorderBrush="#FF4A4A4A"
                        Click="StudyButton_Click"
                        />

                <!-- Flexible spacer pushes the items below to the bottom -->
                <StackPanel Height="0" VerticalAlignment="Stretch"/>

                <!-- You can keep settings/about at bottom -->
                <Separator Margin="0,36,0,36" Background="#FF3A3A3A"/>

                <Button Content="Settings"
                        Height="36"
                        Background="#FF2F2F2F"
                        Foreground="#FFDDDDDD"
                        BorderBrush="#FF444444"
                        Margin="0,0,0,8"/>

                <Button Content="About"
                        Height="36"
                        Background="#FF2F2F2F"
                        Foreground="#FFDDDDDD"
                        BorderBrush="#FF444444"/>
                
            </StackPanel>
        </Border>

        <Grid Grid.Column="1"
              Background="#FF1E1E1E">

            <!--Docakpanel Lays Childeren to the sides and top/bottom-->
            <DockPanel LastChildFill="True"  
                Margin="20,20,20,0">
                
            <!-- Page title on the left -->
            <TextBlock  x:Name="HeaderTitle"
                        Text="Meetings"       
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        DockPanel.Dock="Left"/>    

              
            </DockPanel>

            <!-- The Frame hosts pages and handles navigation between them -->
            <!-- Name so code-behind can navigate it -->
            <Frame x:Name="MainFrame"           
                Margin="20,70,20,20"
                NavigationUIVisibility="Hidden"
                Background="#001E1E1E" Navigated="MainFrame_Navigated"
                />
        </Grid>
    </Grid>
</Window>

    