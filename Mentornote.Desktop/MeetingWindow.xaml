<Window x:Class="Mentornote.Desktop.MeetingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mentornote.Desktop"
        mc:Ignorable="d"
        Title="MeetingWindow" Height="650" Width="800" MinHeight="500" MinWidth="650">
    <Grid Background="#FF242424">
       
        <!-- Define rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Title Row -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <!-- Sidebar fixed width -->
            <ColumnDefinition Width="4*"/>
            <!-- Main content takes remaining space -->
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#FF242424"
                 BorderBrush="#FF2E2E2E"
                 BorderThickness="0,0,0,5"
                Padding="10, 10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Meeting Title"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                
                <TextBlock Text="23:00PM - 5:00AM"
                           FontSize="10"
                           Margin="30,0,0,0"
                           FontWeight="Bold"
                           Foreground="LightBlue"/>
           </StackPanel>
        </Border>

        <!-- 🧩 BODY -->
        <Border Grid.Row="1">
            <!-- Left: Meeting Info -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Meeting Description"
                           Foreground="#FFBFBFBF"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Description}"
                         AcceptsReturn="True"
                         Height="120"
                         TextWrapping="Wrap"
                         Background="#FF2A2A2A"
                         Foreground="White"
                         BorderBrush="#FF3A3A3A"
                         Padding="8"/>

                <Button Content="Save Notes"
                        Width="120" Height="36"
                        Margin="0,10,0,0"
                        Background="MediumPurple"
                        Foreground="White"
                        BorderBrush="#FF4A4A4A"
                        HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Right: Files -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#FF242424"
                Margin="20"
                Padding="10">
            <StackPanel>

                <!-- 🧩 Selected Files (pre-upload) -->
                <TextBlock Text="Selected Files"
                   Foreground="#FFBFBFBF"
                   FontSize="14"/>
                <ListView ItemsSource="{Binding SelectedFiles}"
                  Margin="0,5,0,5"
                  Background="#FF2A2A2A"
                  BorderBrush="#FF333333"
                  Foreground="White"
                  Height="150">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Style.Triggers>
                                <!-- when there are no files -->
                                <DataTrigger Binding="{Binding SelectedFiles.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Text="No files Uploaded yet"
                                           Foreground="#FFBFBFBF"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontStyle="Italic"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Style>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4" Orientation="Horizontal">
                                <Button Content="X"
                                Width="22" Height="22"
                                Margin="20,0,6,0"
                                DockPanel.Dock="Right"
                                CommandParameter="{Binding}"
                                Click="RemoveFile_Click"/>
                                <TextBlock Text="{Binding FileName}"
                                   VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
 
               
                <!-- 🧩 Uploaded Attachments -->
                <TextBlock Text="Attachments"
                   Foreground="#FFBFBFBF"
                   FontSize="14"
                   Margin="0,20,0,0"/>
                <ListView ItemsSource="{Binding SelectedFiles}"
                  Margin="0,5,0,5"
                  Background="#FF2A2A2A"
                  BorderBrush="#FF333333"
                  Foreground="White"
                  Height="200">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Style.Triggers>
                                <!-- when there are no files -->
                                <DataTrigger Binding="{Binding SelectedFiles.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Text="No files selected yet"
                                           Foreground="#FFBFBFBF"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontStyle="Italic"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Style>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FileName}" Width="200"/>
                                <Button Content="X"
                                        Width="22" Height="22"
                                        Margin="20,0,6,0"
                                        DockPanel.Dock="Right"
                                        CommandParameter="{Binding}"
                                        Click="RemoveFile_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- 🧩 File Selection Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                    <Button Content="Choose Files"
                            Width="80" Height="36"
                            Margin="0,0,8,0"
                            Background="MediumAquamarine"
                            Foreground="White"
                            Click="ChooseFiles_Click"/>

                    <Button Content="Upload All"
                            Width="80" Height="36"
                            Background="MediumPurple"
                            Foreground="White"
                            Click="UploadAll_Click"/>
                    
                    <Button Content="Remove All"
                            Width="80" Height="36"
                            Background="MediumVioletRed"
                            Margin="10,0,0,0"
                            Foreground="White"
                            Click="RemoveAllFile_Click"/>

                    <!--<Button Content="Upload All"
                            Width="120" Height="36"
                            Background="MediumPurple"
                            Foreground="White"
                            Click="UploadAll_Click"
                            IsEnabled="{Binding SelectedFiles.Count, Converter={StaticResource GreaterThanZeroConverter}}"/>-->
                </StackPanel>
            </StackPanel>
            
        </Border>
      
    </Grid>
</Window>
