<Window x:Class="Mentornote.Desktop.Windows.SummaryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="450" Width="600"
        Background="#1E1E1E"  
        Foreground="White"
        Title="Meeting Summary">

    <Border Background="#202020"
            Padding="20"
            CornerRadius="10"
            BorderBrush="#3A3A3A"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Meeting Summary"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0 0 0 15"
                       Foreground="White"/>

            <ScrollViewer Grid.Row="1">
                <TextBlock x:Name="SummaryTextBlock"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#E0E0E0"/>
            </ScrollViewer>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0">

                <Button Content="Save"
                        Width="140"
                        Height="38"
                        Background="#0AA06E"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0 0 10 0"
                        Cursor="Hand"
                        Click="SaveButton_Click"/>

                <Button Content="Discard"
                        Width="140"
                        Height="38"
                        Background="#C2185B"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="DiscardButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
