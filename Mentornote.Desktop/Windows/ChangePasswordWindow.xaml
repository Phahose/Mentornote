<Window x:Class="Mentornote.Desktop.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Width="420"
        Height="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <!-- Outer glow / frame -->
    <Border
            Background="#1a1c1b"
            BorderThickness="2"
            BorderBrush="MediumPurple"
            Padding="24">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Change Password"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"/>

                <TextBlock Text="For security, you’ll be logged out after changing your password."
                           Foreground="#99FFFFFF"
                           FontSize="13"
                           Margin="0,6,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Inputs -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">

                <!-- Current password -->
                <TextBlock Text="Current Password"
                           Foreground="#CCFFFFFF"
                           Margin="0,0,0,4"/>

                <PasswordBox x:Name="CurrentPasswordBox"
                             Height="34"
                             Padding="8"
                             Background="#22FFFFFF"
                             Foreground="White"
                             BorderBrush="#44FFFFFF"
                             BorderThickness="1"/>

                <!-- New password -->
                <TextBlock Text="New Password"
                           Foreground="#CCFFFFFF"
                           Margin="0,14,0,4"/>

                <PasswordBox x:Name="NewPasswordBox"
                             Height="34"
                             Padding="8"
                             Background="#22FFFFFF"
                             Foreground="White"
                             BorderBrush="#44FFFFFF"
                             BorderThickness="1"/>

                <!-- Confirm -->
                <TextBlock Text="Confirm New Password"
                           Foreground="#CCFFFFFF"
                           Margin="0,14,0,4"/>

                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="34"
                             Padding="8"
                             Background="#22FFFFFF"
                             Foreground="White"
                             BorderBrush="#44FFFFFF"
                             BorderThickness="1"/>
            </StackPanel>

            <!-- Actions -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel -->
                <Button Content="Cancel"
                        Width="90"
                        Height="34"
                        Background="Transparent"
                        BorderBrush="#44FFFFFF"
                        Foreground="#CCFFFFFF"
                        Click="Cancel_Click"/>

                <!-- Submit -->
                <Button Grid.Column="1"
                        Content="Change Password"
                        Width="160"
                        Height="36"
                        Margin="12,0,0,0"
                        Background="MediumPurple"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="ChangePassword_Click"/>
            </Grid>

        </Grid>
    </Border>
</Window>
