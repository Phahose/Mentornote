<Window x:Class="Mentornote.Desktop.AppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mentornote.Desktop"
        mc:Ignorable="d"
        Title="AppointmentWindow" Height="650" Width="800" MinHeight="500" MinWidth="650">
    <Grid Background="#FF242424">
       
        <!-- Define rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Title Row -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <!-- Sidebar fixed width -->
            <ColumnDefinition Width="4*"/>
            <!-- Main content takes remaining space -->
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#FF242424"
                 BorderBrush="#FF2E2E2E"
                 BorderThickness="0,0,0,5"
                Padding="10, 10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Appointment Title"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                
                <TextBlock Text="23:00PM - 5:00AM"
                           FontSize="10"
                           Margin="30,0,0,0"
                           FontWeight="Bold"
                           Foreground="LightBlue"/>
           </StackPanel>
        </Border>

        <!-- 🧩 BODY -->
        <Border Grid.Row="1">
            <!-- Left: Appointment Info -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Appointment Title:"
                           Foreground="#FFBFBFBF"
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="TitleInput" Margin="0,5,0,15" Background="#FF2A2A2A"
                            Foreground="White"
                            BorderBrush="#FF3A3A3A"
                            Padding="2"
                            Text="Tennis Meet"/>
                
                <TextBlock Text="Appointment Description"
                           Foreground="#FFBFBFBF"
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="AppointmentDescription"
                         AcceptsReturn="True"
                         Height="120"
                         TextWrapping="Wrap"
                         Background="#FF2A2A2A"
                         Foreground="White"
                         BorderBrush="#FF3A3A3A"
                         Padding="8"
                         Text="The Meeting with tennis this is a test appointment to see ow the program works"/>
                
                <TextBlock Text="Organizer Name:"
                           Foreground="#FFBFBFBF"
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="OrganizerInput" Margin="0,5,0,15" Background="#FF2A2A2A"
                            Foreground="White"
                            BorderBrush="#FF3A3A3A"
                            Padding="2"
                            Text="Nicholas Ekwom"/>

                <TextBlock Text="Appointment Date:" 
                           Foreground="#FFBFBFBF"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <DatePicker x:Name="DateInput" Margin="0,5,0,15" Background="#FF2A2A2A"
                            Foreground="black"
                            BorderBrush="#FF3A3A3A"
                            Padding="2"
                            Text="02-11-2025"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Start Time:"  
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="StartTimeInput"
                                  Width="120"
                                  IsEditable="True"
                                  Margin="0,0,20,0" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="End Time:"
                                    Foreground="White"
                                    FontSize="14"
                                    Margin="0,0,0,5"/>
                        <ComboBox x:Name="EndTimeInput"
                                  Width="120"
                                  IsEditable="True"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="Input Appointment"
                        Width="320" Height="36"
                        Margin="20,0,0,0"
                        Background="MediumSeaGreen"
                        Foreground="White"
                        BorderBrush="#FF4A4A4A"
                        HorizontalAlignment="Center"
                        Grid.Row="1" Grid.Column="0"
                        Click="UploadAll_Click"/>
            </StackPanel>
        </Border>
  
        
        <!-- Right: Files -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#FF242424"
                Margin="20"
                Padding="10">
            <StackPanel>

                <!-- 🧩 Selected Files (pre-upload) -->
                <TextBlock Text="Selected Files"
                   Foreground="#FFBFBFBF"
                   FontSize="14"/>
                <ListView ItemsSource="{Binding SelectedFiles}"
                  Margin="0,5,0,5"
                  Background="#FF2A2A2A"
                  BorderBrush="#FF333333"
                  Foreground="White"
                  Height="150">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Style.Triggers>
                                <!-- when there are no files -->
                                <DataTrigger Binding="{Binding SelectedFiles.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Text="No files Uploaded yet"
                                           Foreground="#FFBFBFBF"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontStyle="Italic"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Style>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4" Orientation="Horizontal">
                                <Button Content="X"
                                Width="22" Height="22"
                                Margin="20,0,6,0"
                                DockPanel.Dock="Right"
                                CommandParameter="{Binding}"
                                Click="RemoveFile_Click"/>
                                <TextBlock Text="{Binding FileName}"
                                   VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
 
               
                <!-- 🧩 Uploaded Attachments -->
                <TextBlock Text="Attachments"
                   Foreground="#FFBFBFBF"
                   FontSize="14"
                   Margin="0,20,0,0"/>
                <ListView ItemsSource="{Binding SelectedFiles}"
                  Margin="0,5,0,5"
                  Background="#FF2A2A2A"
                  BorderBrush="#FF333333"
                  Foreground="White"
                  Height="200">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Style.Triggers>
                                <!-- when there are no files -->
                                <DataTrigger Binding="{Binding SelectedFiles.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Text="No files selected yet"
                                           Foreground="#FFBFBFBF"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontStyle="Italic"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Style>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FileName}" Width="200"/>
                                <Button Content="X"
                                        Width="22" Height="22"
                                        Margin="20,0,6,0"
                                        DockPanel.Dock="Right"
                                        CommandParameter="{Binding}"
                                        Click="RemoveFile_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- 🧩 File Selection Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                    <Button Content="Choose Files"
                            Width="120" Height="36"
                            Margin="0,0,8,0"
                            Background="MediumAquamarine"
                            Foreground="White"
                            Click="ChooseFiles_Click"/>

                    <Button Content="Remove All"
                            Width="120" Height="36"
                            Background="MediumVioletRed"
                            Margin="10,0,0,0"
                            Foreground="White"
                            Click="RemoveAllFile_Click"/>

                </StackPanel>
            </StackPanel>
            
        </Border>
      
    </Grid>
</Window>
