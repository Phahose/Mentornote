<Page x:Class="Mentornote.Desktop.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mentornote.Desktop.Pages"
             Background="#1E1E1E">

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel Margin="40,20,40,40" Width="Auto">

            <!-- PAGE TITLE -->
            <TextBlock Text="Settings"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <!-- ==========================
                 SECTION 1 — Audio & Listening
                 ========================== -->
            <Border Background="#2B2B2B"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>

                    <TextBlock Text="Audio and Listening"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <!-- Auto Pause -->
                    <StackPanel Margin="0,6,0,6">
                        <TextBlock Text="Auto-pause listening on silence"
                                   Foreground="#D0D0D0"
                                   Margin="0,0,0,4"/>
                        <CheckBox x:Name="AutoPauseCheck"
                                  Foreground="White"
                                  Content="Enable"
                                  FontSize="14"/>
                    </StackPanel>

                    <!-- Summary Interval -->
                    <StackPanel Margin="0,12,0,6">
                        <TextBlock Text="Rolling summary interval (seconds)"
                                   Foreground="#D0D0D0"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="SummaryIntervalCombo"
                                  Width="150"
                                  Background="#1E1E1E"
                                  Foreground="White"
                                  BorderBrush="#3A3A3A">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="15" IsSelected="True"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="30"/>
                        </ComboBox>
                    </StackPanel>

                </StackPanel>
            </Border>


            <!-- ==========================
                 SECTION 2 — AI Suggestions
                 ========================== -->
            <Border Background="#2B2B2B"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>

                    <TextBlock Text="AI Suggestions"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <!-- Enable Suggestions -->
                    <CheckBox x:Name="EnableSuggestionsCheck"
                              Content="Enable AI suggestions"
                              Foreground="White"
                              Margin="0,6,0,10"/>

                    <!-- Recent Utterances -->
                    <StackPanel Margin="0,6,0,6">
                        <TextBlock Text="Number of recent utterances to use"
                                   Foreground="#D0D0D0"/>
                        <Slider x:Name="UtteranceSlider"
                                Minimum="5"
                                Maximum="25"
                                Value="15"
                                Width="260"/>
                        <TextBlock Text="{Binding ElementName=UtteranceSlider, Path=Value, StringFormat={}{0} utterances}"
                                   Foreground="#A0A0A0"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Document RAG -->
                    <StackPanel Margin="0,12,0,0">
                        <CheckBox x:Name="UseDocumentsCheck"
                                  Content="Use uploaded documents for context (RAG)"
                                  Foreground="White"/>
                    </StackPanel>

                </StackPanel>
            </Border>


            <!-- ==========================
                 SECTION 3 — Data & App
                 ========================== -->
            <Border Background="#2B2B2B"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>

                    <TextBlock Text="Data and App"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <!-- Clear Transcripts -->
                    <Button Content="Clear Saved Transcripts"
                            Width="260"
                            Height="36"
                            Background="#8B0000"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,4,0,12"
                            x:Name="ClearTranscriptsButton"/>

                    <!-- Theme -->
                    <StackPanel Margin="0,8,0,6">
                        <TextBlock Text="Theme"
                                   Foreground="#D0D0D0"
                                   Margin="0,0,0,4"/>

                        <ComboBox x:Name="ThemeCombo"
                                  Width="150"
                                  Background="#1E1E1E"
                                  Foreground="Black"
                                  BorderBrush="#3A3A3A">
                            <ComboBoxItem Content="Dark" IsSelected="True"/>
                            <ComboBoxItem Content="Light"/>
                        </ComboBox>
                    </StackPanel>

                </StackPanel>
            </Border>

        </StackPanel>

    </ScrollViewer>
</Page>
