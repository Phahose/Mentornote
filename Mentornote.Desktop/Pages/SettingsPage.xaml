<Page x:Class="Mentornote.Desktop.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mentornote.Desktop.Pages"
             Background="#1E1E1E">

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel Margin="40,20,40,40" Width="Auto">

            <!-- PAGE TITLE -->
            <TextBlock Text="Settings"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <!-- ==========================
                 SECTION 1 — AI Suggestions
                 ========================== -->
            <Border Background="#2B2B2B"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>

                    <TextBlock Text="AI Suggestions"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <!-- Recent Utterances -->
                    <StackPanel Margin="0,6,0,6">
                        <TextBlock Text="Number of recent utterances to use"
                                   Foreground="#D0D0D0"/>
                        <Slider x:Name="UtteranceSlider"
                                Minimum="5"
                                Maximum="25"
                                Value="15"
                                Width="260"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                SmallChange="1"
                                LargeChange="1"/>
                        <TextBlock Text="More utterances may guarrantee more accurate"
                                   Foreground="#A0A0A0"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="{Binding ElementName=UtteranceSlider, Path=Value, StringFormat={}{0} utterances}"
                                   Foreground="#A0A0A0"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==========================
            SECTION — AI Response Behavior
            ========================== -->
            <Border Background="#2B2B2B"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,20">

                <StackPanel>
                    <TextBlock Text="AI Response Style"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,12"/>

                    <!-- Response Type -->
                    <StackPanel Margin="0,6,0,12">
                        <TextBlock Text="Response format"
                                    Foreground="#D0D0D0"
                                    Margin="0,0,0,4"/>
                        <ComboBox x:Name="ResponseFormatCombo"
                                Width="220"
                                Background="#1E1E1E"
                                Foreground="Black"
                                BorderBrush="#3A3A3A">
                            <ComboBoxItem Content="Bullet points"/>
                            <ComboBoxItem Content="Guided answer" IsSelected="True"/>
                            <ComboBoxItem Content="Full script (word-for-word)"/>
                        </ComboBox>
                    </StackPanel>


                    <!-- Confidence -->
                    <StackPanel Margin="0,6,0,12">
                        <TextBlock Text="Response Tone"
                                   Foreground="#D0D0D0"/>
                        <ComboBox x:Name="ResponseToneCombo"
                                  Width="220"
                                  Background="#1E1E1E"
                                  Foreground="Black"
                                  BorderBrush="#3A3A3A">
                            <ComboBoxItem Content="Professional" IsSelected="True"/>
                            <ComboBoxItem Content="Polite"/>
                            <ComboBoxItem Content="Casual"/>
                            <ComboBoxItem Content="Executive"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Resume Usage -->
                    <StackPanel Margin="0,6,0,12">
                        <TextBlock Text="Resume usage"
                      Foreground="#D0D0D0"
                      Margin="0,0,0,4"/>
                        <ComboBox x:Name="ResumeUsageCombo"
                                     Width="240"
                                     Background="#1E1E1E"
                                     Foreground="Black"
                                     BorderBrush="#3A3A3A">
                            <ComboBoxItem Content="Only when relevant" IsSelected="True"/>
                            <ComboBoxItem Content="Prefer resume examples"/>
                            <ComboBoxItem Content="Always tie to resume"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Creativity -->
                    <StackPanel Margin="0,6,0,0">
                        <TextBlock Text="Creativity"
                                   Foreground="#D0D0D0"/>
                        <Slider x:Name="CreativitySlider"
                                Minimum="0"
                                Maximum="1"
                                Value="0.6"
                                Width="260"/>
                        <TextBlock Text="Lower = safer, Higher = more expressive"
                                   Foreground="#A0A0A0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==========================
                Data & App
             ========================== -->
            <Border Background="#2B2B2B"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>

                    <TextBlock Text="Data and App"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <!-- Clear Transcripts -->
                    <Button Content="Clear Saved Transcripts"
                            Width="260"
                            Height="36"
                            Background="#8B0000"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,4,0,12"
                            x:Name="ClearTranscriptsButton"/>

                    <!-- Theme -->
                    <StackPanel Margin="0,8,0,6">
                        <TextBlock Text="Theme"
                                   Foreground="#D0D0D0"
                                   Margin="0,0,0,4"/>

                        <ComboBox x:Name="ThemeCombo"
                                  Width="150"
                                  Background="#1E1E1E"
                                  Foreground="Black"
                                  BorderBrush="#3A3A3A">
                            <ComboBoxItem Content="Dark" IsSelected="True"/>
                            <ComboBoxItem Content="Light"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- ACTION BUTTONS -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Reset to Defaults"
                        Width="150"
                        Height="36"
                        Margin="0,0,12,0"
                        Background="#3A3A3A"
                        Foreground="White"
                        BorderThickness="0"
                        Click="ResetDefaults_Click"/>

                <Button Content="Save Settings"
                        Width="140"
                        Height="36"
                        Background="#FFFFFF"
                        Foreground="Black"
                        BorderThickness="0"
                        Click="SaveSettings_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
