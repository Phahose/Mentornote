<Page x:Class="Mentornote.Desktop.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E"
      Width="1000">

    <Grid Margin="40">
        <StackPanel>

            <!-- Header -->
            <TextBlock Text="Your Profile"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,30"/>

            <!-- User info card -->
            <Border Background="#2A2A2A"
                    Padding="20"
                    CornerRadius="8"
                    Margin="0,0,0,20">

                <StackPanel>
                    <TextBlock Text="UserId"
                               FontSize="14"
                               Foreground="#AAAAAA"/>
                    <TextBlock x:Name="UserIdText"
                               FontSize="20"
                               Foreground="White"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Full Name"
                               FontSize="14"
                               Foreground="#AAAAAA"/>
                    <TextBlock x:Name="FullNameText"
                               FontSize="20"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Email"
                               FontSize="14"
                               Foreground="#AAAAAA"/>
                    <TextBlock x:Name="EmailText"
                               FontSize="20"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Member since"
                               FontSize="14"
                               Foreground="#AAAAAA"/>
                    <TextBlock x:Name="CreatedAtText"
                               FontSize="18"
                               Foreground="White"/>
                </StackPanel>

            </Border>

            <!-- Manage Account -->
            <Border Background="#2A2A2A"
                    Padding="20"
                    CornerRadius="8"
                    Margin="0,0,0,20">

                <StackPanel>
                    <TextBlock Text="Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <Button Content="Change Password"
                            Height="40"
                            Margin="0,0,0,10"
                            Click="ChangePassword_Click"/>

                    <Button Content="Delete Account"
                            Height="40"
                            Background="#7A0000"
                            Foreground="White"/>
                </StackPanel>

            </Border>

            <!-- Logout Button -->
            <Button Content="Log Out"
                    Height="48"
                    Background="#FF3F3F3F"
                    Foreground="White"
                    BorderBrush="#555"
                    FontSize="18"
                    Click="Logout_Click"/>

        </StackPanel>
    </Grid>
</Page>
