<Page x:Class="Mentornote.Desktop.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1C1C1C">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Create Account"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <!-- FIRST NAME -->
            <StackPanel Margin="0,8">
                <TextBlock Text="First Name" Foreground="#909090" FontSize="14"/>
                <TextBox x:Name="FirstNameBox"
                         Height="42"
                         FontSize="16"
                         Padding="10"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="#3A3A3A"/>
            </StackPanel>

            <!-- LAST NAME -->
            <StackPanel Margin="0,8">
                <TextBlock Text="Last Name" Foreground="#909090" FontSize="14"/>
                <TextBox x:Name="LastNameBox"
                         Height="42"
                         FontSize="16"
                         Padding="10"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="#3A3A3A"/>
            </StackPanel>

            <!-- EMAIL -->
            <StackPanel Margin="0,8">
                <TextBlock Text="Email" Foreground="#909090" FontSize="14"/>
                <TextBox x:Name="EmailBox"
                         Height="42"
                         FontSize="16"
                         Padding="10"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="#3A3A3A"/>
            </StackPanel>

            <!-- PASSWORD -->
            <StackPanel Margin="0,8">
                <TextBlock Text="Password" Foreground="#909090" FontSize="14"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="42"
                             FontSize="16"
                             Padding="10"
                             Background="#2C2C2C"
                             Foreground="White"
                             BorderBrush="#3A3A3A"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Password Strength Meter -->
                <ProgressBar x:Name="PasswordStrengthBar"
                             Height="8"
                             Margin="0,4,0,0"
                             Minimum="0"
                             Maximum="3"/>

                <TextBlock x:Name="PasswordStrengthText"
                           Foreground="#D0D0D0"
                           FontSize="12"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- CONFIRM PASSWORD -->
            <StackPanel Margin="0,8">
                <TextBlock Text="Confirm Password" Foreground="#909090" FontSize="14"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="42"
                             FontSize="16"
                             Padding="10"
                             Background="#2C2C2C"
                             Foreground="White"
                             BorderBrush="#3A3A3A"/>
            </StackPanel>

            <!-- ERROR MESSAGE -->
            <TextBlock x:Name="ErrorMessage"
                       Foreground="#FF4444"
                       FontSize="14"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"/>

            <!-- SUBMIT BUTTON -->
            <Button Content="Create Account"
                    Height="48"
                    FontSize="18"
                    Foreground="White"
                    Background="#3F6EF6"
                    Click="SignUp_Click"
                    Margin="0,12"/>

            <!-- LOGIN REDIRECT -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Already have an account?"
                           Foreground="#CFCFCF"
                           FontSize="14"/>
                <Button Content=" Log In"
                        Foreground="#3F6EF6"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Click="GoToLogin_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
