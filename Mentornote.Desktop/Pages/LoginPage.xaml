<Page x:Class="Mentornote.Desktop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1C1C1C">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Welcome Back"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Form -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center" >

            <!-- Email -->
            <StackPanel Margin="0,10">
                <TextBlock Text="Email"
                           Foreground="#909090"
                           FontSize="14"
                           Margin="0,5"/>
                <TextBox x:Name="EmailBox"
                         Height="42"
                         Padding="10"
                         FontSize="16"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="#3A3A3A"
                         BorderThickness="1"
                         />
            </StackPanel>

            <!-- Password -->
            <StackPanel>
                <TextBlock Text="Password"
                           Foreground="#909090"
                           FontSize="14"
                            Margin="0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="42"
                             Padding="10"
                             FontSize="16"
                             Background="#2C2C2C"
                             Foreground="White"
                             BorderBrush="#3A3A3A"
                             BorderThickness="1"
                             />
            </StackPanel>

            <!-- Error -->
            <TextBlock x:Name="ErrorMessage"
                       Foreground="#FF4444"
                       FontSize="14"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"/>

            <!-- Login Button -->
            <Button Content="Login"
                    Height="48"
                    FontSize="18"
                    Foreground="White"
                    Background="#3F6EF6"
                    BorderThickness="0"
                    Click="Login_Click"
                     Margin="0,15"/>

            <!-- Navigate to Signup -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Don't have an account?"
                           Foreground="#CFCFCF"
                           FontSize="14"/>
                <Button Content=" Sign Up"
                        Foreground="#3F6EF6"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Click="GoToSignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
