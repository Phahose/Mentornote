@page
@model Mentornote.Project.IndexModel
@{
    ViewData["Title"] = "Welcome to Mentornote";
}
<div class="index-body">
    <header>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" asp-page="/Index">  <img src="https://img.icons8.com/ios-filled/50/FFFFFF/graduation-cap.png" alt="Logo" class="logo" /></a>
            </li>
            <li class="nav-item letsgetstarted">
                <a class="nav-link" href="~/SignUp">Lets Get Started</a>
            </li>
        </ul>
    </header>
    <div class="home-container">
        <div class="hometextcontainer">
            <h1>Smarter learning, louder bragging</h1>
            <p>A smarter way to learn, build, and stand out. Mentornote gives you the tools you make the impact.</p>
            <a href="~/Start" class="getStarted">Get Started</a>
        </div>
        <div class="videocontainer">
            <video controls autoplay muted loop>
                <source src="~/vids/homepage.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>

